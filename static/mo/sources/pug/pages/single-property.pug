					// Post Share and Links
					.blog-post-solo-footer.mt-20
						.blog-post-solo-footer-left
							ul.blog-post-solo-footer-list
								li
									span.icon.mdi.mdi-clock
									a(href='#') February 10, 2018
						.blog-post-solo-footer-right
							ul.blog-post-solo-footer-list-1
								li: span Share this post
								li
									ul.list-inline-1
										li: a.icon.link-default.fa-facebook(href='#')
