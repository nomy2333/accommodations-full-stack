									dt Zip:
									dd 8322
								dl.list-terms-inline
									dt Country:
									dd United States
								dl.list-terms-inline
									dt Area:
									dd Lake Worth

					// Bootstrap collapse
					#accordion2.card-group-custom.card-group-corporate(
					role='tablist'
					aria-multiselectable='false')
						+card({
							show: true,
							parentId: 'accordion2',
							number: '1',
							header: 'Features'
						}).card-corporate
							ul.list-marked-2.layout-2
								li 2 Stories
								li Basketball Court
								li Lawn
								li Gym
								li Fireplace
								li Sprinklers
								li Private Space
								li Balcony
								li Laundry
								li Ocean View

					// Bootstrap collapse
					#accordion3.card-group-custom.card-group-corporate(
					role='tablist'
					aria-multiselectable='false')
						+card({
							show: true,
							parentId: 'accordion3',
							number: '1',
							header: 'Floor Plan'
						}).card-corporate
							a(href='images/single-property-1-570x447.png' data-lightgallery='item').d-block.text-center
								+png('single-property-1-570x447')

					.block-group-item
						h3 Property Map
