extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_ui-counter

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	include ../sections/_header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'breadcrumbs-bg-01-1922x291'
	})

	// Skill Bars
	section.section.section-lg.bg-default.text-center
		.container
			h2 Progress Bars, Skill Bars, Counters
			h4.text-default.mw-700.block-center These elements are vital to design of every website, and with them you can improve the overall look of your resource and attract more clients.
			.row.row-50.flex-lg-row-reverse.justify-content-md-center.justify-content-lg-between.text-left
				.col-md-10.col-lg-6.col-xl-5
					h3 Welcome to Our Website
					p Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what he/she is looking for. With advanced features of activating account and new login widgets, you will definitely have a great experience of using our web page. It will tell you lots of interesting things about our company, its products and services, highly professional staff and happy customers.

				.col-md-10.col-lg-6
					+progress-bar-linear({
						title: 'Professionalism',
						valueTo: '75'
					})

					+progress-bar-linear({
						title: 'Dedication',
						valueTo: '85'
					})

					+progress-bar-linear({
						title: 'Knowledge',
						valueTo: '80'
					})

	// Counters
	+parallax({
		img: 'images/bg-02-1920x916.jpg'
	}).section-lg.context-dark.text-center.bg-darkblue-2_1
		.container
			.row.row-30
				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							span 860
						p.box-counter-title Properties on Map

				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							.counter 29
						p.box-counter-title Professional Agents

				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							.counter 10
							span k
						p.box-counter-title Happy Clients

				.col-6.col-md-3
					// Box counter
					article.box-counter
						.box-counter-main
							.counter 15
						p.box-counter-title New Apartments Daily

	// Section Circle Progress Bars
	section.section.section-lg.bg-default.text-center
		.container
			.row.justify-content-center.row-20
				.col-sm-10.col-md-8.col-lg-12
					.row.row-50.justify-content-between
						.col-sm-6.col-lg-3
							// Circle Progress Bar
							.progress-bar-circle(
							data-value='0.73'
							data-gradient=colors.secondary 
							data-empty-fill='rgb(245,245,245)' 
							data-size='181' 
							data-thickness='3')
								span
							p.progress-bar-circle-title Leadership
							
						.col-sm-6.col-lg-3
							// Circle Progress Bar
							.progress-bar-circle(
							data-value='0.11'
							data-gradient=colors.secondary 
							data-empty-fill='rgb(245,245,245)' 
							data-size='181' 
							data-thickness='3')
								span
							p.progress-bar-circle-title Management
							
						.col-sm-6.col-lg-3
							// Circle Progress Bar
							.progress-bar-circle(
							data-value='0.13'
							data-gradient=colors.secondary 
							data-empty-fill='rgb(245,245,245)' 
							data-size='181' 
							data-thickness='3')
								span
							p.progress-bar-circle-title Innovation and creativity
							
						.col-sm-6.col-lg-3
							// Circle Progress Bar
							.progress-bar-circle(
							data-value='0.59'
							data-gradient=colors.secondary 
							data-empty-fill='rgb(245,245,245)' 
							data-size='181' 
							data-thickness='3')
								span
							p.progress-bar-circle-title Resilience
							
	// Page Footer
	include ../sections/_footer-classic
